{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "runner": "terminal",
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "run",
                "build"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "args": [
                "test"
            ]
        }
    ]
}
